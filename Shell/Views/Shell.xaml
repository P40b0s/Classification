<metro:MetroWindow x:Class="Classification.Shell.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        WindowStartupLocation="CenterScreen"
        Height="1000" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="800"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1250"/>
            <ColumnDefinition Width="600*"/>
        </Grid.ColumnDefinitions>
        <ContentControl prism:RegionManager.RegionName="SearchModuleRegion" Grid.Row="0" Grid.Column="0"/>
        <ContentControl prism:RegionManager.RegionName="MainListViewModuleRegion" Grid.Row="1" Grid.Column="0"/>
        <ContentControl prism:RegionManager.RegionName="ModuleDocumentTextViewerModuleRegion" Grid.RowSpan="2"  Grid.Column="1"/>

    </Grid>
</metro:MetroWindow>
